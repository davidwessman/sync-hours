<div class="w-full border-r text-center">
  <% if current_user.space %>
    <div class="border-b w-full py-4 mb-8 font-semibold text-blue-700 text-xl">
      <h2>
        <%= current_user.space %>
      </h2>
    </div>
    <ul class="mb-8">
      <li class="">
        <%= sidebar_link(account_path, current == :space) do %>
          <%= icon('far', 'rocket') %>
          <%= t('.space') %>
        <% end%>
      </li>
      <li class="border-b">
        <%= sidebar_link(account_contacts_path, current == :contacts) do %>
          <%= icon('far', 'users') %>
          <%= t('.contacts') %>
        <% end%>
      </li>
    </ul>
  <% end %>
</div>
