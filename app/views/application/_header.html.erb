<!--Logo & name-->
<nav class="flex items-center justify-between flex-wrap bg-white p-6 border-b-1">
  <div class="flex items-center flex-no-shrink mr-6">
    <%= image_tag('logo_animated.svg', class: 'h-12 w-12 mr-6') %>
    <%= link_to root_path do %>
      <span class="font-semibold text-3xl text-blue tracking-light mr-6"><%= t('.title')%></span>
    <% end %>
  </div>

<!-- Mobile menu -->
  <div class="block lg:hidden">
    <button class="flex items-center px-3 py-2 border rounded text-teal-lighter border-teal-light hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
<!-- End -->

<!-- Desktop menu -->
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-sm lg:flex-grow">
      <%= link_to root_path do %>
        <span class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey-darkest hover:text-grey mr-8"><%= t('.home')%></span>
      <% end %>
      <%= link_to root_path do %>
        <span class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey-darkest hover:text-grey mr-8"><%= t('.contact')%></span>
      <% end %>
      <%= link_to root_path do %>
        <span class="block mt-4 lg:inline-block lg:mt-0 font-semibold text-grey-darkest hover:text-grey mr-8"><%= t('.about')%></span>
      <% end %>
    </div>
  <div>
    <% if signed_in? %>
      <%= link_to(t('.sign_out'), sign_out_path, method: :delete,
                  class: 'button button-grey') %>
    <% else %>
      <%= link_to(t('.sign_in'), sign_in_path,
                  class: 'button button-blue') %>
    <% end %>
    <%= link_to(t('.sign_up'), root_path,
                class: 'button bg-green text-white hover:bg-green-dark hidden sm:inline') %>
  </div>
</nav>
