<div class="p-6 text-center">
  <div class="w-24 mx-auto mt-4 mb-4">
    <%= image_tag('add_first_customer.svg', alt: 'Builders')%>
  </div>
  <p class="mb-4 text-2xl font-medium text-gray-900"><%= t(".no_customers_found") %></p>
  <p class="max-w-xs mx-auto mb-6 text-gray"><%= t(".register_first_customer") %></p>
  <div class="flex justify-center mt-8 text-center text-gray">
    <div class="flex font-medium hover:border-gray-400 hover:text-gray-400">
      <%= link_to(new_customer_path, class: 'bg-blue-600 border-blue-600 border hover:bg-blue-500 hover:border-blue-500 py-2 px-3 rounded text-white') do %>
        <%= t('.new_customer') %>
      <% end %>
    </div>
  </div>
</div>
