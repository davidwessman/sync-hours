<% content_for(:sidebar) do %>
<%= render('application/sidebar', current: :contacts) %>
<% end %>
<div x-data="{ tab: 'account' }" class="flex-grow">
  <%= render('heading') %>
  <div class="p-2 pb-4 lg:p-3 xl:p-6">
    <div class="max-w-screen-xl pb-20">
      <div x-show="tab === 'account'" class="">
        <%= render("account") %>
      </div>
      <div x-show="tab === 'billing'" class="">
        <%= render("billing") %>
      </div>
    </div>
  </div>
</div>
