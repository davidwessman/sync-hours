<!-- Services index under account -->
<div class="w-full -mt-4">
  <div class="flex md:flex-row flex-wrap border-t h-full">
    <div class="w-full lg:w-1/6 bg-white border-r text-center text-grey-lighter">
      <div class="w-full mb-6 text-center text-black mt-8">
        <h3>Welcome </h3><br>
        <h4><%= current_user.email %></h4>
      </div>
      <div class="w-full text-center mt-8">
        <ul class="list-reset">
          <li class="mt-0">
            <%= link_to(t('.overview'), account_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <%= link_to(t('.services'), account_services_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <%= link_to(t('.settings'), account_settings_path,
              class: 'bg-blue inline-block border-t w-full py-4 text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <a class="bg-white inline-block border-t border-b w-full py-4 px-4 text-grey-light font-semibold">Upgrade</a>
          </li>
        </ul>
      </div>
    </div>


    <div class="w-full md:w-5/6 bg-blue-ligher p-4 border">
      <div class="w-full text-left mt-4 ml-8">
        <h2>Settings</h2>
      </div>
      <div class="w-3/5 mb-6 mt-8 mr-auto ml-auto">
        <div class="flex flex-wrap px-2 -mx-2">
          <div class="bg-white rounded shadow-md sm:w-full md:w-1/2 lg:w-1/2 xl:w-1/2 px-2 h-64">
            <div class="h-12 px-4 py-4 border-b">
              <h3>Account</h3>
              <div class="flex px-2 mt-6 text-grey">
                User name:
              </div>
              <div class="flex px-2 mt-2">
                User
              </div>
              <div class="flex px-2 mt-2 text-grey">
                Email:
              </div>
              <div class="px-2 mt-2">
                user@email.com
              </div>
              <div class="px-2 mt-2 text-grey">
                Company name:
              </div>
              <div class="px-2 mt-2">
                N/a
              </div>
              <div class="px-2 mt-2 text-grey">
                Country:
              </div>
              <div class="px-2 mt-2 mb-4">
                N/a
              </div>
            </div>
          </div>
          <div class="sm:w-full md:w-1/2 lg:w-1/2 xl:w-1/2 mb-4 px-2">
            <div class="bg-white rounded shadow-md h-64">
              <div class="h-12 px-4 py-4 border-b">
                <h3>Premium plan</h3>
              </div>
              Subscribe now
              <div class="text-center px-4 py-4 mt-8">
                <button class="bg-blue text-white font-bold py-2 px-4 rounded opacity-50 cursor-not-allowed">
                  Upgrade
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="w-full mb-6 mt-4 px-2">
          <div class="bg-white rounded shadow-md">
            <div class="flex flex-wrap h-32">
              <div class="w-1/3 p-2 self-center mr-auto ml-auto">
                <div class="text-left p-2 sm:text-base md:text-lg lg:text-xl xl:text-xl">
                  Log out all social media accounts
                </div>
              </div>
              <div class="w-1/2 p-2 self-center">
                <div class="text-grey-darker text-center p-2">
                  <%= link_to(t('.log out all accounts'), read_more_path, class: 'bg-black hover:bg-grey-darkest text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-3 rounded shadow-md') %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
