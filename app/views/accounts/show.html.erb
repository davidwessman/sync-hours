<!-- Account page -->
<div class="w-full -mt-4">
  <div class="flex md:flex-row flex-wrap w-full h-full border-t">
    <div class="w-full lg:w-1/6 bg-white border-r text-center text-grey-lighter">
      <div class="mb-6 text-center text-black mt-8">
        <h3>Welcome </h3><br>
        <h4><%= current_user.email %></h4>
      </div>
      <div class="">
        <ul class="list-reset">
          <li class="">
            <%= link_to(t('.overview'), account_path,
              class: 'bg-blue inline-block border-t w-full py-4 text-white font-semibold') %>
          </li>
          <li class="">
            <%= link_to(t('.services'), account_services_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="">
            <%= link_to(t('.settings'), account_settings_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="">
            <a class="bg-white inline-block border-t border-b w-full py-4 px-4 text-grey-light font-semibold">Upgrade</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="flex w-full lg:w-5/6 justify-center">
      <div class="flex-wrap w-full p-4 text-center justify-between ml-8 mr-8">
        <div class="w-full text-left mb-4 mt-4">
          <h2>Overview</h2>
        </div>
        <div class="w-full lg:w-5/6 sm:block md:block lg:flex-wrap xl:flex mb-6 mt-8 ml-auto mr-auto">
          <div class="w-full flex-1 xl:w-1/2 p-4 m-2 bg-white border mb-4">
            <div class="h-64">
              <h3>Opening hours</h3>
              <%= icon('fas', 'globe', class: 'fa-2x') %>
            </div>
            <div class="h-32">
              <h3>Opening hours</h3>
            </div>
          </div>
          <div class="w-full flex-2 xl:w-1/2 xl:w-1/3 p-4 m-2 bg-white border mb-4">
            <div class="">
              <h3>Services</h3>
            </div>
            <div class="text-left text-blue p-2">
              <div class="flex flex-row mb-4">
                <h3 class="mt-1 mr-3">Facebook</h3>
                <button class="bg-green hover:bg-green-light text-white font-bold py-2 px-4 rounded">
                  Authenticated
                </button>
              </div>
              <div class="flex flex-row mb-4">
                <h3 class="mt-1 mr-3">Google</h3>
                <button class="bg-red hover:bg-red-lighter text-white font-bold py-2 px-4 rounded">
                  Authenticate
                </button>
              </div>
            </div>
          </div>
          <div class="w-full h-64 bg-white border p-4 m-2 text-left">
            <div class="">
              <h3>Random</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
