<div class="w-full mb-6">
  <h1>Hello <%= current_user.email %></h1>
</div>


<div class="w-full mb-2">
  <h2><%= t('.locations') %></h2>
</div>

<% @locations.each do |location| %>
  <%= render(location) %>
<% end %>

<div class="w-full mb-2">
  <h2 class="mb-1"><%= t('.services') %></h2>
  <%= simple_format(t('.your_connected_services')) %>
</div>

<% @services.each do |service| %>
  <div class="w-full md:w-1/5 p-4 border border-blue rounded shadow-md m-2 bg-white">
    <div class="font-bold text-xl mb-2">
      <%= service.kind %>
    </div>
    <%= service.active %>
  </div>
<% end %>
