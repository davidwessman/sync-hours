<div class="flex justify-center w-full">
  <h1 class="text-xl font-semibold"><%= title(t('.title')) %></h1>
</div>

<div class="w-full max-w-md pt-4 mx-auto">
  <%= form_with(scope: :password, url: passwords_path, local: true,
                class: 'border border-grey bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4') do |form| %>
    <p class="mb-4"><%= t(".description") %></p>
    <div class="mb-4">
      <%= form.label(:email, class: 'form-label ') %>
      <%= form.text_field(:email, id: 'email', type: 'email', autofocus: true,
                                  class: 'shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker')
                                   %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit(class: 'button button-blue mb-3') %>
    </div>
  <% end %>
</div>
