<!-- Services index under account -->
<div class="w-full -mt-4">
  <div class="flex md:flex-row flex-wrap w-full h-full border-t">
    <div class="w-full lg:w-1/6 bg-white border-r text-center text-grey-lighter">
      <div class="mb-6 text-center text-black mt-8">
        <h3>Welcome </h3><br>
        <h4><%= current_user.email %></h4>
      </div>
      <div class="">
        <ul class="list-reset">
          <li class="">
            <%= link_to(t('.overview'), account_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="">
            <%= link_to(t('.services'), account_services_path,
              class: 'bg-blue inline-block border-t w-full py-4 text-white font-semibold') %>
          </li>
          <li class="">
            <%= link_to(t('.settings'), account_settings_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="">
            <a class="bg-white inline-block border-t border-b w-full py-4 px-4 text-grey-light font-semibold">Upgrade</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="flex w-full lg:w-5/6">
      <div class="w-full p-4 text-center ml-8 mr-8"> <!-- Main content div -->
        <div class="w-full text-left mt-4 border-b py-2 border-grey"> <!--Headline div -->
          <h2>Services</h2> - Connect platforms where your opening hours should be synced.
        </div>
        <div class="w-4/5 mt-8 ml-auto mr-auto block lg:flex-wrap xl:flex bg-white rounded shadow-md border"> <!-- Social platforms intro div -->
          <div class="w-full xl:w-1/2 p-1 mr-auto ml-auto">
            <div class="xl:w-1/2 mr-auto ml-auto p-2 text-lg lg:text-xl mt-2">
            Social platforms
              <div class="w-4/5 mr-auto ml-auto text-grey italic text-sm md:text-base lg:text-lg xl:text-xl mt-2">
                - connect your social platforms.
              </div>
            </div>
          </div>
          <div class="w-full lg:w-1/2 p-2 mr-auto ml-auto self-center">
            <div class="text-grey-darker text-center p-4">
              <%= link_to(t('.how_does_it_work'), read_more_path, class: 'bg-blue hover:bg-blue-light text-white font-bold text-sm md:text-base lg:text-lg xl:text-lg py-2 px-6 rounded shadow-md') %>
            </div>
          </div>
        </div>
        <div class="w-4/5 mb-6 mt-8 ml-auto mr-auto">
          <div class="flex flex-wrap -mx-2">
            <div class="w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <div class="flex w-full border-b">
                    <div class="w-4/5 h-8 px-4 py-2 text-xl text-left">
                      Facebook
                    </div>
                    <div class="w-1/5 text-2xl py-1 px-4 text-right">
                      <%= link_to(account_path) do %>
                        <%= icon('fab', 'facebook-square', class: 'fa-1x') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <div class="flex w-full border-b">
                    <div class="w-4/5 h-8 px-4 py-2 text-xl text-left">
                      Google
                    </div>
                    <div class="w-1/5 text-2xl py-1 px-4 text-right">
                      <%= link_to(account_path) do %>
                        <%= icon('fab', 'google', class: 'fa-1x') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <div class="flex w-full border-b">
                    <div class="w-4/5 h-8 px-4 py-2 text-xl text-left">
                      iCal
                    </div>
                    <div class="w-1/5 text-2xl py-1 px-4 text-right">
                      <%= link_to(account_path) do %>
                        <%= icon('far', 'calendar-plus', class: 'fa-1x') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="w-full xl:w-2/3 mb-6 mt-4">
            <div class="bg-white rounded shadow-md">
              <div class="flex h-32">
                <div class="w-1/3 p-2 self-center mr-auto ml-auto">
                  <div class="text-left p-2 text-base md:text-lg lg:text-xl xl:text-2xl">
                    Calendar
                  </div>
                  <div class="text-center text-grey text-sm md:text-base lg:text-lg xl:text-xl p-2 -mt-4">
                    - schedule upcoming changes to your opening hours.
                  </div>
                </div>
                <div class="w-1/2 p-2 self-center">
                  <div class="text-grey-darker text-center p-2">
                    <%= link_to(t('.schedule'), read_more_path, class: 'bg-blue hover:bg-blue-light text-white font-bold text-sm md:text-base lg:text-lg xl:text-lg py-2 px-3 rounded shadow-md') %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
