<!-- Services index under account -->
<div class="w-full -mt-4">
  <div class="flex md:flex-row flex-wrap border-t h-full">
    <div class="w-full lg:w-1/6 bg-white border-r text-center text-grey-lighter">
      <div class="w-full mb-6 text-center text-black mt-8">
        <h3>Welcome </h3><br>
        <h4><%= current_user.email %></h4>
      </div>
      <div class="w-full text-center mt-8">
        <ul class="list-reset">
          <li class="mt-0">
            <%= link_to(t('.overview'), account_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <%= link_to(t('.services'), account_services_path,
              class: 'bg-blue inline-block border-t w-full py-4 text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <%= link_to(t('.settings'), account_settings_path,
              class: 'bg-white inline-block border-t w-full py-4 px-4 text-blue hover:bg-blue-light hover:text-white font-semibold') %>
          </li>
          <li class="mt-0">
            <a class="bg-white inline-block border-t border-b w-full py-4 px-4 text-grey-light font-semibold">Upgrade</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="w-full md:w-5/6 bg-blue-ligher p-4">
      <div class="w-full text-left mt-4 ml-8">
        <h2>Services</h2> - Connect platforms where your opening hours should be synced.
      </div>
      <div class="w-4/5 mb-6 mt-8 ml-auto mr-auto px-2">
        <div class="bg-white rounded shadow-md">
          <div class="flex flex-wrap h-32">
            <div class="w-1/3 p-2 self-center mr-auto ml-auto">
              <div class="text-left p-2 sm:text-base md:text-lg lg:text-xl xl:text-2xl">
                Social platforms
              </div>
              <div class="text-center text-grey sm:text-sm md:text-base lg:text-lg xl:text-xl p-2 -mt-4">
                - connect your social platforms.
              </div>
            </div>
            <div class="w-1/2 p-2 self-center">
              <div class="text-grey-darker text-center p-2">
                <%= link_to(t('.how_does_it_work'), read_more_path, class: 'bg-blue hover:bg-blue-light text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-6 rounded shadow-md') %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="w-4/5 mb-6 mt-8 ml-auto mr-auto">
        <div class="px-2">
          <div class="flex flex-wrap -mx-2">
            <div class="sm:w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <button class="bg-blue text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-4 rounded-full shadow-md">
                    Facebook
                  </button>
                </div>
              </div>
            </div>
            <div class="sm:w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <button class="bg-white border text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-4 rounded-full shadow-md">
                    <span style="color: blue">G</span><span style="color: red">o</span><span style="color: yellow">o</span><span style="color: blue">g</span><span style="color: green">l</span><span style="color: red">e</span>
                  </button>
                </div>
              </div>
            </div>
            <div class="sm:w-full md:w-1/2 lg:w-1/2 xl:w-1/3 mb-4 px-2">
              <div class="bg-white rounded shadow-md h-48">
                <div class="h-12 px-4 py-4">
                  <button class="bg-green text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-4 rounded-full shadow-md">
                    iCal
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
          <div class="w-2/3 mb-6 mt-4 px-2">
            <div class="bg-white rounded shadow-md">
              <div class="flex flex-wrap h-32">
                <div class="w-1/3 p-2 self-center mr-auto ml-auto">
                  <div class="text-left p-2 sm:text-base md:text-lg lg:text-xl xl:text-2xl">
                    Calendar
                  </div>
                  <div class="text-center text-grey sm:text-sm md:text-base lg:text-lg xl:text-xl p-2 -mt-4">
                    - schedule upcoming changes to your opening hours.
                  </div>
                </div>
                <div class="w-1/2 p-2 self-center">
                  <div class="text-grey-darker text-center p-2">
                    <%= link_to(t('.schedule'), read_more_path, class: 'bg-blue hover:bg-blue-light text-white font-bold sm:text-sm md:text-base lg:text-lg xl:text-lg py-2 px-3 rounded shadow-md') %>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </div>
  </div>
</div>
