<div class="flex flex-col p-4 mb-4 w-4/5 border border-blue rounded-lg">
  <div class="mb-2">
    <%= simple_format(message.content) %>
  </div>
  <div class="flex justify-between mb-4">
    <div class="">
      <%= t('.status') %>: <%=message.status %>
    </div>
    <div class="">
      <%= t('.sent_by', user: message.user) %>
    </div>
    <div class="">
      <%= l(message.sent_at, format: :short) if message.sent_at? %>
    </div>
  </div>
</div>