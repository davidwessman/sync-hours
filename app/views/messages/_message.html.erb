<% hide_user ||= false %>
<div class="flex justify-between">
  <div class="flex w-3/5">
    <div class="w-10">
    <div
      class="flex items-center justify-center w-8 h-8 text-xs font-semibold text-green-600 bg-green-200 rounded-full md:h-10 md:w-10 md:text-sm lg:text-base">
      <%= message.user.initials %>
    </div>
  </div>
    <div class="flex-wrap">
      <div class="flex p-3 mt-6 ml-2 bg-blue-600 rounded-r-lg rounded-bl-lg shadow-md">
        <div class="flex-col justify-between w-full text-white">
          <%= simple_format(message.content) %>
        </div>
      </div>

      <div class="flex justify-between mt-1 text-xs text-gray-500">
        <div class="">
          <!--<%= t('.sent_by', user: message.user) %>,-->
          <%= l(message.processed_at, format: :short) if message.processed_at? %>
        </div>
        <div class="">
          <span class="inline-flex px-2 text-xs font-semibold leading-5 text-green-800 bg-green-100 rounded-full">
            <%= t(message.status,scope:"model.message.statuses") %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% if message.status == "draft" %>
  <div class="flex items-center mb-8">
    <svg class="w-8 h-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </div>
  <% end %>
</div>
