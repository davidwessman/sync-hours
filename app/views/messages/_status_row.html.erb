
<tr class="w-full border-b border-gray-200">
  <td class="w-1/3 px-2 py-4 whitespace-no-wrap sm:w-1/3 md:w-1/4 lg:px-2 xl:px-4">
    <div class="flex items-center">
      <div class="flex-shrink-0 w-8 h-8 md:w-10 md:h-10">
        <div
          class="inline-flex items-center justify-center w-8 h-8 text-xs font-semibold text-blue-600 bg-blue-200 rounded-full md:h-10 md:w-10 md:text-sm lg:text-base">
          <%= message.contact.initials %>
        </div>
      </div>
      <div class="ml-2 sm:ml-4">
        <div class="text-xs font-medium leading-5 text-gray-900 sm:text-sm"><%= message.contact.name %>
        </div>
        <div class="hidden text-sm leading-5 text-gray-500 sm:block"><%= message.contact.phone %>
        </div>
        <div class="w-24 text-xs leading-5 text-gray-500 truncate sm:text-sm sm:hidden"><%= message.content %>
        </div>
      </div>
    </div>
  </td>
  <td class="w-1/3 px-2 py-4 md:px-6 lg:px-2 xl:px-6">
    <div class="text-xs leading-5 text-gray-500 sm:text-sm">
      <%= l(message.created_at, format: "%Y-%m-%d") %>
    </div>
    <div class="text-xs leading-5 text-gray-900 sm:text-sm">
      <%= l(message.created_at, format: "%H:%M") %>
    </div>
  </td>
  <td class="w-1/3 px-2 py-4 whitespace-no-wrap md:px-6 lg:px-2 xl:px-6">
    <div>
      <div class="text-sm leading-5 text-gray-500">Sent by
      </div>
      <div class="text-sm leading-5 text-gray-900"><%= message.user %>
      </div>
    </div>
  </td>
</tr>
