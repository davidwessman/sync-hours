<!-- Services index under account -->
<% content_for(:sidebar) do %>
  <%= render('application/sidebar', current: :spaces) %>
<% end %>

<div class="flex w-full">
  <div class="w-full p-4 mx-8 "> <!-- Main content div -->
    <div class="w-full py-2 mt-4 text-left border-b border-grey"> <!--Headline div -->
      <h2>Spaces</h2>
    </div>
    <div class="py-3">
      <% @spaces.each do |space| %>
        <%= render('spaces/space_grid_item', space: space) %>
      <% end %>
    </div>
  </div>
</div>
