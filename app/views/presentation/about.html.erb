<div class="w-full overflow-hidden">
  <div class="z-1 w-full flex justify-center bg-grey-light items-center">
    <%= image_tag('about_us.jpg')%>
    <div class="z-1 flex absolute sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl w-full text-white justify-center items-center">
      <h1 class="text-xl font-semibold"><%= t('.about_us') %></h1>
    </div>
  </div>
  <div class="flex flex-wrap mt-6">
    <div class="w-full sm:w-1/2 xl:w-1/3 ml-auto text-center mt-4 mb-8 pb-8">
      <div class="sm:text-lg md:text-xl lg:text-2xl xl:text-3xl">
        <h3 class="text-lg font-semibold"><%= t('.what_is_synka') %></h3>
      </div>
      <div class="flex text-left p-8">
        <%= t('.about_1') %>
      </div>
      <%= link_to(t('.about_button'), 'read_more', class: 'button button-blue') %>
    </div>
    <div class="w-full sm:w-1/2 xl:w-1/3 mr-auto text-center mt-4">
      <div class="sm:text-lg md:text-xl lg:text-2xl xl:text-3xl">
        <h3 class="text-lg font-semibold"><%= t('.help_and_support') %></h3>
      </div>
      <div class="flex text-left p-8">
        <%= t('.help_and_support_1') %>
      </div>
    </div>
  </div>
</div>

<%= content_for(:footer) do %>
  <div class="flex flex-row w-full text-center bg-white p-6">
    <div class="w-full sm:w-1/3">
      <h3 class="text-lg font-semibold mb-2"><%= t('.stay_up_to_date') %></h3>
      <%= simple_format(t('.stay_up_to_date_more')) %>
    </div>
    <div class="w-full sm:w-1/3">
      <h3 class="text-lg font-semibold"><%= t('.one_control_panel') %></h3>
      <%= simple_format(t('.one_control_panel_more')) %>
    </div>
    <div class="w-full sm:w-1/3">
      <h3 class="text-lg font-semibold"><%= t('.integrate_calendar') %></h3>
      <%= simple_format(t('.integrate_calendar_more')) %>
    </div>
  </div>
<% end %>
