    <div class="z-1 w-full flex justify-center bg-grey-light items-center">
      <%= image_tag('about_us.jpg')%>
      <div class="z-40 absolute sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl w-full h-64 text-white flex justify-center items-center">
        <h1><%= t('.about_us') %></h1>
      </div>
    </div>
    <div class="flex flex-wrap mt-6">
      <div class="sm:w-4/5 md:w-1/2 lg:w-1/2 xl:w-1/3 ml-auto text-center mt-4">
        <div class="sm:text-lg md:text-xl lg:text-2xl xl:text-3xl">
          <h3><%= t('.about_us') %></h3>
        </div>
